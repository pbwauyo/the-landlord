<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.aboutus.AboutUs">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/extraLargePaddingStart">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"
                android:text="The Landlord"
                android:textStyle="bold"
                android:textSize="30sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Because of you"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="20sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="I would like to thank all the partners, users and donors who make it possible for The Landlord App to be available for free for every person out there. "
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/instagram_ic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_instagram"
                app:layout_constraintTop_toBottomOf="@+id/content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="25dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/instagram_follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/instagram_ic"
                app:layout_constraintTop_toTopOf="@id/instagram_ic"
                android:text="Follow me on Instagram"
                android:textSize="18sp"
                android:layout_marginHorizontal="@dimen/extraLargeMarginStart"/>

            <ImageView
                android:id="@+id/facebook_ic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_facebook"
                app:layout_constraintTop_toBottomOf="@+id/instagram_ic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/facebook_follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/facebook_ic"
                app:layout_constraintTop_toTopOf="@id/facebook_ic"
                android:text="Follow me on Facebook"
                android:textSize="18sp"
                android:layout_marginHorizontal="@dimen/extraLargeMarginStart"/>

            <ImageView
                android:id="@+id/twitter_ic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_twitter"
                app:layout_constraintTop_toBottomOf="@+id/facebook_ic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/twitter_follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/twitter_ic"
                app:layout_constraintTop_toTopOf="@id/twitter_ic"
                android:text="Follow me on Twitter"
                android:textSize="18sp"
                android:layout_marginHorizontal="@dimen/extraLargeMarginStart"/>

            <ImageView
                android:id="@+id/email_ic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_email"
                app:layout_constraintTop_toBottomOf="@+id/twitter_ic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/email_ic"
                app:layout_constraintTop_toTopOf="@id/email_ic"
                android:text="pbwauyo@gmail.com"
                android:textSize="18sp"
                android:layout_marginHorizontal="@dimen/extraLargeMarginStart"/>

            <ImageView
                android:id="@+id/phone_ic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_phone"
                app:layout_constraintTop_toBottomOf="@+id/email_ic"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/phone_ic"
                app:layout_constraintTop_toTopOf="@id/phone_ic"
                android:text="+256785271004 or +256700908030"
                android:textSize="18sp"
                android:layout_marginHorizontal="@dimen/extraLargeMarginStart"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Version 1.0.0"
                android:layout_marginBottom="@dimen/extraLargeMarginBottom"
                android:textSize="18sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>