    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/mainBackgroundColor</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="imageBackground">@drawable/image_view_purple_background</item>
        <item name="secondaryIconColor">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="primaryLight">@color/primaryLight</item>
        <item name="authEditTextColor">@color/colorPrimaryDark</item>
        <item name="mainTextColor">@color/colorPrimary</item>
        <item name="mainTextInputColor">@color/black</item>
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
        <item name="materialAlertDialogTheme">@style/CustomMaterialAlertDialogStyle</item>
        <item name="dialogTheme">@style/DialogStyle</item>

        <item name="rentalDetailsAttrs">@color/white</item>
        <item name="rentalDetialsTxtAttrs">@color/white</item>

        <item name="defaultTextColor">@color/blackLight</item>
        <item name="materialCardViewStyle">@style/CardViewStyleMain</item>
        <item name="cardViewStyle">@style/OldCardViewStyleMain</item>
        <item name="android:textViewStyle">@style/CustomTextViewStyle</item>
        <item name="materialButtonStyle">@style/CustomMaterialOutlineButtonStyle</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationBarStyle</item>

<!--        card radius-->
        <item name="cardCornerRadius">?attr/smallCardCornerRadius</item>
        <item name="smallCardCornerRadius">@dimen/cardRadiusSmall</item>
        <item name="mediumCardCornerRadius">@dimen/cardRadiusMedium</item>
        <item name="largeCardCornerRadius">@dimen/cardRadiusLarge</item>

<!--        card elevation-->
        <item name="smallCardElevation">@dimen/smallCardElevation</item>
        <item name="mediumCardElevation">@dimen/mediumCardElevation</item>
        <item name="largeCardElevation">@dimen/largeCardElevation</item>
        <item name="cardElevation">?attr/smallCardElevation</item>

<!--        margin start-->
        <item name="smallMarginStart">@dimen/smallMarginStart</item>
        <item name="mediumMarginStart">@dimen/mediumMarginStart</item>
        <item name="largeMarginStart">@dimen/largeMarginStart</item>
        <item name="extraLargeMarginStart">@dimen/extraLargeMarginStart</item>

<!--        margin end-->
        <item name="smallMarginEnd">@dimen/smallMarginEnd</item>
        <item name="mediumMarginEnd">@dimen/mediumMarginEnd</item>
        <item name="largeMarginEnd">@dimen/largeMarginEnd</item>
        <item name="extraLargeMarginEnd">@dimen/extraLargeMarginEnd</item>

<!--        margin top-->
        <item name="smallMarginTop">@dimen/smallMarginTop</item>
        <item name="mediumMarginTop">@dimen/mediumMarginTop</item>
        <item name="largeMarginTop">@dimen/largeMarginTop</item>
        <item name="extraLargeMarginTop">@dimen/extraLargeMarginTop</item>

<!--        margin bottom-->
        <item name="smallMarginBottom">@dimen/smallMarginBottom</item>
        <item name="mediumMarginBottom">@dimen/mediumMarginBottom</item>
        <item name="largeMarginBottom">@dimen/largeMarginBottom</item>
        <item name="extraLargeMarginBottom">@dimen/extraLargeMarginBottom</item>

<!--        padding start-->
        <item name="smallPaddingStart">@dimen/smallPaddingStart</item>
        <item name="mediumPaddingStart">@dimen/mediumPaddingStart</item>
        <item name="largePaddingStart">@dimen/largePaddingStart</item>
        <item name="extraLargePaddingStart">@dimen/extraLargePaddingStart</item>

<!--        padding end-->
        <item name="smallPaddingEnd">@dimen/smallPaddingEnd</item>
        <item name="mediumPaddingEnd">@dimen/mediumPaddingEnd</item>
        <item name="largePaddingEnd">@dimen/largePaddingEnd</item>
        <item name="extraLargePaddingEnd">@dimen/extraLargePaddingEnd</item>

<!--         padding top-->
        <item name="smallPaddingTop">@dimen/smallPaddingTop</item>
        <item name="mediumPaddingTop">@dimen/mediumPaddingTop</item>
        <item name="largePaddingTop">@dimen/largePaddingTop</item>
        <item name="extraLargePaddingTop">@dimen/extraLargePaddingTop</item>

<!--        padding bottom-->
        <item name="smallPaddingBottom">@dimen/smallPaddingBottom</item>
        <item name="mediumPaddingBottom">@dimen/mediumPaddingBottom</item>
        <item name="largePaddingBottom">@dimen/largePaddingBottom</item>
        <item name="extraLargePaddingBottom">@dimen/extraLargePaddingBottom</item>


    </style>

    <style name="CustomBottomNavigationBarStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!-- TODO WILL UPDATE LATER ON -->
    </style>

    <style name="CustomMaterialOutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/custom_selector_color</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="CustomTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/mainTextColor</item>
        <item name="android:textColorHint">@color/blackLight</item>
    </style>

    <style name="AuthTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/primaryLight</item>
        <item name="boxStrokeColor">@color/custom_selector_color</item>
        <item name="boxStrokeErrorColor">@color/red</item>
    </style>


    <style name="CustomMaterialFilledTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/primaryLightShade2</item>
        <item name="boxStrokeColor">@color/transparent_color_statelist</item>
        <item name="android:textColorHint">@color/primaryLight</item>
        <item name="hintTextColor">@color/transparentColor</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">false</item>
        <item name="shapeAppearanceOverlay">@style/TextInputLayoutShapeAppearance</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="TextInputLayoutShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="CardViewStyleMain" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="OldCardViewStyleMain" parent="">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.MaterialComponents.Caption">

    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">?mainTextInputColor</item>
        <item name="android:textColorHint">@color/blackLight</item>
        <item name="background">@color/primaryLightShade2</item>
    </style>

    <style name="AppTheme.SecondaryTheme">
        <item name="textInputStyle">@style/CustomMaterialFilledTextInputLayout</item>
    </style>

    <style name="CustomMaterialAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialogButtonPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialogButtonNegative</item>
<!--        <item name="alertDialogStyle">@style/MaterialAlertDialogShape</item>-->
<!--        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>-->
    </style>

<!--    <style name="MaterialAlertDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">-->
<!--        <item name="android:textColor">@color/white</item>-->
<!--    </style>-->

    <style name="MaterialAlertDialogButtonNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/MaterialAlertDialogBtnOverlayNegative</item>
        <item name="strokeColor">@color/red_selector_color</item>
    </style>

    <style name="MaterialAlertDialogBtnOverlayNegative" parent="">
        <item name="colorPrimary">@color/red</item>

    </style>

    <style name="MaterialAlertDialogButtonPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/MaterialAlertDialogBtnOverlayPositive</item>
        <item name="strokeColor">@color/green_selector_color</item>
    </style>

    <style name="MaterialAlertDialogBtnOverlayPositive" parent="">
        <item name="colorPrimary">@color/green</item>

    </style>

<!--    TODO: This styling seems to be faulty-->
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/red</item>
        <item name="colorAccent">@color/green</item>
        <item name="background">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSecondary">@color/green</item>
    </style>

    <style name="DialogMaterialOutlineButtonStyleNegative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/red_selector_color</item>
        <item name="cornerRadius">18dp</item>
    </style>

    <style name="DialogMaterialOutlineButtonStylePositive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/green_selector_color</item>
        <item name="cornerRadius">18dp</item>
    </style>

